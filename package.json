{
  "name": "masonry-quilt",
  "version": "2.0.0",
  "description": "A pure TypeScript masonry layout calculator that packs boxes into a given space - no UI, just boxes in and positioning out",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "masonry",
    "layout",
    "grid",
    "packing",
    "algorithm",
    "positioning",
    "box-packing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "tsdown": "^0.17.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
